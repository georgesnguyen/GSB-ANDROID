<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="rv.gsb.fr.myapplication.consulterRapportVisite">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="407dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="52dp"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/btnRechercher"
            android:onClick="consulter"
            android:text="AFFICHER LA LISTE DES RAPPORTS"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/calendarView"
            android:layout_marginStart="60dp"

            tools:ignore="UnknownId" />

        <TextView
            android:id="@+id/textMois"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/btnRechercher"
            android:layout_marginTop="60dp"
            android:text="Mois :" />

        <TextView
            android:id="@+id/textAnnee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textMois"
            android:layout_below="@+id/textMois"
            android:layout_marginTop="71dp"
            android:text="AnnÃ©e :" />

        <Spinner
            android:id="@+id/spinnerMois"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textMois"
            android:layout_below="@+id/textMois" />

        <Spinner
            android:id="@+id/spinnerAnnee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textAnnee"
            android:layout_below="@+id/textAnnee"
            tools:ignore="DuplicateIds,UnknownId" />

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
